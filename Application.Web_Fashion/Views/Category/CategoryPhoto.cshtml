
@{
    ViewBag.Title = Localizer["Manage Category Image"];
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}

<style type="text/css">
    table {
        border-collapse: collapse;
    }
    td {
        padding: 6px;
    }
    .fileUpload {
        position: relative;
        overflow: hidden;
        margin: 10px;
    }
    .fileUpload input.upload {
        position: absolute;
        top: 0;
        right: 0;
        margin: 0;
        padding: 0;
        font-size: 20px;
        cursor: pointer;
        opacity: 0;
        filter: alpha(opacity=0);
    }
    .photo-additional {
        color: blue;
        font-weight: 600;
    }
    .photo-primary {
        font-weight: 600;
        color: green;
    }
</style>

<form name="myForm" novalidate>
    <div ng-controller="categoryPhotoCtrl" class="form-horizontal">

        <div class="clearfix">
            <h2>@Localizer["Category Image"]</h2>
            <br />
            <div class="form-group">
                <div class="col-sm-12">
                    <div style="border: 1px solid #dcdcdc; text-align: center;">
                        <table style="margin: 0 auto;">
                            <tr>
                                <td style="padding-right: 30px;">
                                    <table>
                                        <tr>
                                            <td class="center">
                                                <div class="fileUpload btn btn-primary center">
                                                    <span>@Localizer["Browse Image"]</span>
                                                    <input id="inputFile" type="file" class="upload" name="file" accept="image/*" onchange="angular.element(this).scope().selectPhoto(this.files)" required />
                                                </div>
                                                <div>@Localizer["Size"]: 340px X 434px</div>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td style="border-left: 1px solid #dcdcdc;"></td>
                                <td style="padding-left: 30px;">
                                    <table>
                                        <tr>
                                            <td>
                                                <div style="width: 140px; height: 105px; border:2px dashed #808080; padding:5px;">
                                                    <img id="imgTemp" style="height: 100%; width: 100%;" src="~/Images/no-image.png" alt="your image" />
                                                </div>
                                                <div id="divSavePhoto" class="center" style="padding:5px; border:1px solid #dcdcdc; margin-top: 2px; display: none;">
                                                    <button id="btnUploadPhoto" type="submit" ng-click="uploadPhoto()" class="btn btn-primary">@Localizer["Save"]</button>
                                                    <button id="btnPhotoCancel" type="submit" class="btn btn-default">@Localizer["Cancel"]</button>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <table border="1" style="width: 100%; border: 1px solid #dcdcdc;">
                        <tr style="background-color: #f5f5f5; font-weight: 600;">
                            <td class="center">
                                @Localizer["Category Image"]
                            </td>
                            <td class="center">
                                @Localizer["Delete"]
                            </td>
                        </tr>
                        <tr>
                            <td class="center">
                                <img alt="" class="studentPhoto" ng-src="/Photos/Categories/{{ImageName}}" />
                            </td>
                            <td class="center">
                                <span class="deletePhoto cursor-pointer glyphicon glyphicon-remove cursor-pointer" style="color: red;" ng-click="deletePhoto(photo.Id)"></span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <br /><br />

        <div class="clearfix">

            <h2>@Localizer["Category Icon"]</h2>
            <br />
            <div class="form-group">
                <div class="col-sm-12">
                    <div style="border: 1px solid #dcdcdc; text-align: center;">
                        <table style="margin: 0 auto;">
                            <tr>
                                <td style="padding-right: 30px;">
                                    <table>
                                        <tr>
                                            <td class="center">
                                                <div class="fileUpload btn btn-primary center">
                                                    <span>@Localizer["Browse Icon"]</span>
                                                    <input id="inputIconFile" type="file" class="upload" name="file" accept="image/*" onchange="angular.element(this).scope().selectIcon(this.files)" required />
                                                </div>
                                                <div>@Localizer["Size"]: 32px X 32px</div>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td style="border-left: 1px solid #dcdcdc;"></td>
                                <td style="padding-left: 30px;">
                                    <table>
                                        <tr>
                                            <td>
                                                <div style="width: 100px; height: 100px; border:2px dashed #808080; padding:5px;">
                                                    <img id="iconTemp" style="height: 100%; width: 100%;" src="~/Images/no-image.png" alt="your icon" />
                                                </div>
                                                <div id="divSaveIcon" class="center" style="padding:5px; border:1px solid #dcdcdc; margin-top: 2px; display: none;">
                                                    <button id="btnUploadIcon" type="submit" ng-click="uploadIcon()" class="btn btn-primary">@Localizer["Save"]</button>
                                                    <button id="btnIconCancel" type="submit" class="btn btn-default">@Localizer["Cancel"]</button>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <table border="1" style="width: 100%; border: 1px solid #dcdcdc;">
                        <tr style="background-color: #f5f5f5; font-weight: 600;">
                            <td class="center">
                                @Localizer["Category Icon"]
                            </td>
                            <td class="center">
                                @Localizer["Delete"]
                            </td>
                        </tr>
                        <tr>
                            <td class="center">
                                <img alt="" class="studentPhoto" ng-src="/Photos/Categories/Icons/{{IconName}}" />                                
                            </td>
                            <td class="center">
                                <span class="deleteIcon cursor-pointer glyphicon glyphicon-remove cursor-pointer" style="color: red;" ng-click="deleteIcon(photo.Id)"></span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>