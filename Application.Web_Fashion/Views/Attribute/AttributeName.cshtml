@{
    ViewBag.Title = "Item Type";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}
<div class="page-banner no-subtitle">
    <div class="row">
        <div class="col-md-6">
            <h2>@Localizer["Attributes"]</h2>
        </div>
        <div class="col-md-6">
            <ul class="breadcrumbs">
                <li><span><b>@Localizer["Admin"]</b></span></li>
                <li>@Localizer["Attributes"]</li>
            </ul>
        </div>
    </div>
</div>

<div ng-controller="AttributeNameCtrl" ng-cloak>
    <div style="width: 100%;" class="mobile-view-overflow">
        <table class="table table-bordered table-condensed table-hover setup-form">
            <tr class="setup-table-header">
                <th style="text-align:left; width:200px;">
                    <div class="btn-toolbar">
                        @*<button type="submit" class="btn btn-sm btn-primary" ng-click="toggleAddMode()"><span class="glyphicon glyphicon-plus"></span> Add</button>*@
                    </div>
                </th>
                <th>@Localizer["Name"]</th>
                <th>@Localizer["Value (Add comma separation values)"]</th>
            </tr>
            <tr ng-show="addMode">
                <td>
                    <div class="btn-toolbar" style="width:200px;">
                        <div class="setup-btn-group">
                            <button type="submit" class="btn btn-sm btn-primary" ng-click="createAttributeName()"><span class="glyphicon glyphicon-ok"></span> @Localizer["Save"]</button>
                            <button type="submit" style="margin-left:10px;" class="btn btn-sm btn-default" ng-click="toggleAddMode()"><span class="glyphicon glyphicon-remove"></span> @Localizer["Cancel"]</button>
                        </div>
                    </div>
                </td>
                <td>
                    <input ng-model="attributeName.Name" />
                </td>
                <td>
                    <input ng-model="attributeName.Value" />
                </td>
            </tr>
            <tr ng-repeat="attributeName in attributeNameList | orderBy:'Name':false">
                <td>
                    <div class="btn-toolbar" ng-show="attributeName.editMode == null || attributeName.editMode == false" style="width:250px;">
                        <div class="setup-btn-group">
                            <button type="submit" class="btn btn-sm btn-success" ng-click="toggleEditMode(attributeName)"><span class="glyphicon glyphicon-pencil"></span> @Localizer["Edit"]</button>
                            @*<button type="submit" style="margin-left:10px;" class="btn btn-sm btn-danger" ng-click="deleteAttributeName(attributeName)"><span class="glyphicon glyphicon-remove"></span> Delete</button>*@
                            <button type="submit" style="margin-left:10px; display:none;" class="btn btn-sm btn-warning" ng-click="addAttr(attributeName)"><span class="glyphicon glyphicon-plus"></span> @Localizer["Attr"]</button>
                        </div>
                    </div>
                    <div class="btn-toolbar" ng-show="attributeName.editMode == true" style="width:200px;">
                        <div class="setup-btn-group">
                            <button type="submit" class="btn btn-sm btn-primary" ng-click="updateAttributeName(attributeName)"><span class="glyphicon glyphicon-ok"></span> @Localizer["Update"]</button>
                            <button type="submit" style="margin-left:10px;" class="btn btn-sm btn-default" ng-click="toggleEditMode(attributeName)"><span class="glyphicon glyphicon-remove"></span> @Localizer["Cancel"]</button>
                        </div>
                    </div>
                </td>
                <td>
                    <span ng-show="attributeName.editMode == null || attributeName.editMode == false">{{attributeName.Name}}</span>
                    <input ng-model="attributeName.Name" ng-show="attributeName.editMode == true" style="width: 200px;" disabled />
                </td>
                <td>
                    <span ng-show="attributeName.editMode == null || attributeName.editMode == false">{{attributeName.Value}}</span>                    
                    <input ng-model="attributeName.Value" ng-show="attributeName.editMode == true" style="width: 200px;" />
                </td>
            </tr>
        </table>
    </div>
</div>