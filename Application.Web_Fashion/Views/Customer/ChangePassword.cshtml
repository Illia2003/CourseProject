
@{
    ViewBag.Title = Localizer["Change Password"];
    Layout = "~/Views/Shared/_Layout_Customer.cshtml";
}



<div class="page-banner no-subtitle">
    <div class="row">
        <div class="col-md-6">
            <h2>@Localizer["Change Password"]</h2>
        </div>
        <div class="col-md-6">
            <ul class="breadcrumbs">
                <li><a href="#">@Localizer["My Auction"]</a></li>
                <li>@Localizer["Change Password"]</li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">

        <div class="form-group">
            <div class="row">
                <div class="message"></div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <span class="col-sm-3 right">@Localizer["Current Password"]:</span>
                <div class="col-sm-5">
                    <input id="currentPassword" type="password" class="form-control" style="width:220px; height: 30px;" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <span class="col-sm-3 right">@Localizer["New Password"]:</span>
                <div class="col-sm-5">
                    <input id="newPassword" type="password" class="form-control" style="width:220px; height: 30px;" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <span class="col-sm-3 right">@Localizer["Confirm Password"]:</span>
                <div class="col-sm-5">
                    <input id="confirmPassword" type="password" class="form-control" style="width:220px; height: 30px;" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <h3 class="col-sm-3"></h3>
                <div class="col-sm-9">
                    <button id="btnChangePassword" type="submit" class="btn btn-primary theme-back-color">@Localizer["Change Password"]</button>
                </div>
            </div>
        </div>
    </div>
</div>