@{
    ViewBag.Title = Localizer["Order List"];
    Layout = "~/Views/Shared/_Layout_Customer.cshtml";
}

<div class="page-banner no-subtitle">
    <div class="row">
        <div class="col-md-6">
            <h2>@Localizer["Order List"]</h2>
        </div>
        <div class="col-md-6">
            <ul class="breadcrumbs">
                <li><a href="#">@Localizer["My Orders"]</a></li>
                <li>@Localizer["Order List"]</li>
            </ul>
        </div>
    </div>
</div>

<form name="myForm" novalidate>
    <div ng-controller="CustomerOrderListCtrl" class="form-horizontal">
        <div class="row">
            <div class="col-sm-12">
                <div class="item-loading">
                    <img src="~/Images/ajax-loader.gif" /> @Localizer["Loading..."]
                </div>
                <div style="overflow:auto">
                    <table id="customerOrderList-datatable" class="table table-striped table-bordered table-hover" style="width: 100%;"></table>
                </div>
            </div>
        </div>
    </div>
</form>