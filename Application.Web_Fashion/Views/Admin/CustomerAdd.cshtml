
@{
    ViewBag.Title = Localizer["Add Customer"];
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}

<div class="container11">

    <div class="page-banner no-subtitle">
        <div class="row">
            <div class="col-md-6">
                <h2 id="lblAddCustomer">@Localizer["Add Customer"]</h2>
            </div>
            <div class="col-md-6">
                <ul class="breadcrumbs">
                    <li><a href="#">@Localizer["Add Customer"]</a></li>
                    <li>@Localizer["Admin"]</li>
                </ul>
            </div>
        </div>
    </div>

    <form name="myForm" novalidate>
        <div ng-controller="AddCustomerCtrl" class="form-horizontal" style="padding-top:5px;">
            <div class="register-form">

                <div class="row" style="margin-left:0; margin-right:0; border: 1px solid #dcdcdc;">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h2 style="padding:20px; text-align:center;">@Localizer["Create Customer"]</h2>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row-login-credential">
                            <div class="row">
                                <span class="col-sm-3 right">@Localizer["Username"]:</span>
                                <div class="col-sm-8">
                                    <input type="text" id="customerUsername" ng-model="Username" class="form-control" placeholder="@Localizer["Enter Email Or Mobile"]" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group row-login-credential">
                            <div class="row">
                                <span class="col-sm-3 right">@Localizer["Password"]:</span>
                                <div class="col-sm-8">
                                    <input type="password" id="customerPassword" ng-model="Password" class="form-control" placeholder="@Localizer["Enter Password"]"/>
                                </div>
                            </div>
                        </div>
                       
                        <div class="form-group">
                            <div class="row">
                                <span class="col-sm-3 right">@Localizer["First Name"]:</span>
                                <div class="col-sm-8">
                                    <input type="text" id="customerFirstName" ng-model="FirstName" class="form-control" placeholder="@Localizer["Enter First Name"]" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <span class="col-sm-3 right">@Localizer["Last Name"]:</span>
                                <div class="col-sm-8">
                                    <input type="text" id="customerLastName" ng-model="LastName" class="form-control" placeholder="@Localizer["Enter Last Name"]" />
                                </div>
                            </div>
                        </div>                                                                       
                        <div class="form-group">
                            <div class="row">
                                <span class="col-sm-3 right">@Localizer["Address"]:</span>
                                <div class="col-sm-8">
                                    <textarea id="customerAddress" ng-model="ShipAddress" placeholder="@Localizer["Enter Address (House number, street, town/village)"]" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="row">
                                <h3 class="col-sm-3"></h3>
                                <div class="col-sm-8">
                                    <button id="btnCustomerRegister" type="submit" ng-click="registerAccount()" class="btn btn-primary">@Localizer["Create Customer"]</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>
</div>

