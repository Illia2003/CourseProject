@{
    ViewBag.Title = Localizer["Register Account"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form name="myForm" novalidate>

    <div ng-controller="RegisterCtrl" style="margin-top:30px; margin-bottom:30px;">

        <div id="divRegister" class="register-form">

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <h2 style="padding:20px; text-align:center;">@Localizer["Create Account"]</h2>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row-login-credential">
                        <div class="row">
                            <span class="col-sm-3 right">@Localizer["Email"]:</span>
                            <div class="col-sm-8">
                                <input type="text" id="username" ng-model="Username" class="form-control" placeholder="@Localizer["Enter Email"]" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group row-login-credential">
                        <div class="row">
                            <span class="col-sm-3 right">@Localizer["Password"]:</span>
                            <div class="col-sm-8">
                                <input type="password" id="password" ng-model="Password" class="form-control" placeholder="@Localizer["Enter Password"]" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <span class="col-sm-3 right">@Localizer["First Name"]:</span>
                            <div class="col-sm-8">
                                <input type="text" ng-model="FirstName" class="form-control" placeholder="@Localizer["Enter first name"]" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <span class="col-sm-3 right">@Localizer["Last Name"]:</span>
                            <div class="col-sm-8">
                                <input type="text" ng-model="LastName" class="form-control" placeholder="@Localizer["Enter last name"]" />
                            </div>
                        </div>
                    </div>                                        
                    <div class="form-group">
                        <div class="row">
                            <span class="col-sm-3 right">@Localizer["Address"]:</span>
                            <div class="col-sm-8">
                                <textarea id="address" ng-model="ShipAddress" placeholder="@Localizer["Enter address"]" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <h3 class="col-sm-3"></h3>
                            <div class="col-sm-8">
                                <button id="btnRegister" type="submit" ng-click="registerAccount()" class="bm-button theme-back-color" style="width: 100%;">@Localizer["Create Account"]</button>
                            </div>
                        </div>
                    </div>
                    <br />
                </div>
            </div>
        </div>
    </div>
</form>