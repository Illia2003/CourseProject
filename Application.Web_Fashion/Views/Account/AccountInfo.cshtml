@using Application.Web;

@{
    ViewBag.Title = "AccountInfo";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}

<div class="page-banner no-subtitle">
    <div class="row">
        <div class="col-md-6">
            <h2>@Localizer["Account Information"]</h2>
        </div>
        <div class="col-md-6">
            <ul class="breadcrumbs">
                <li><a href="#">@Localizer["My Auction"]</a></li>
                <li>@Localizer["Account Info"]</li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">

        <div class="form-group">
            <div class="row">
                <div class="message"></div>
            </div>
        </div>

        @{
            if (AppUtils.GetLoggedInUser() != null)
            {
                var user = AppUtils.GetLoggedInUser();
                var name = user.FirstName + " " + user.LastName;
                var email = user.Username;
                var username = user.Username;

                <div class="form-group">
                    <div class="row">
                        <span class="col-sm-3 right">@Localizer["Mobile (Your username)"]:</span>
                        <div class="col-sm-5">                       
                            <span id="username">@{ @username } &nbsp;</span> <a target="_blank" href="/Account/ChangeUsername">@Localizer["(Change Mobile)"]</a>              
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <span class="col-sm-3 right">@Localizer["Password"]:</span>
                        <div class="col-sm-5">
                            <span>*********</span> &nbsp; <a target="_blank" href="/Account/ChangePassword">@Localizer["(Change Password)"]</a>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <span class="col-sm-3 right">@Localizer["Name"]:</span>
                        <div class="col-sm-5">
                            <input type="text" id="name" class="form-control" style="width:220px; height: 30px;" value="@{ @name }" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <span class="col-sm-3 right">@Localizer["Email"]:</span>
                        <div class="col-sm-5">
                            <input type="text" id="email" class="form-control" style="width:220px; height: 30px;" value="@{ @email }" />
                        </div>
                    </div>
                </div>
            }
        }
        <div class="form-group">
            <div class="row">
                <h3 class="col-sm-3"></h3>
                <div class="col-sm-9">
                    <button id="btnUpdateUserInfo" type="submit" class="btn btn-primary">@Localizer["Update"]</button>
                </div>
            </div>
        </div>
    </div>
</div>
